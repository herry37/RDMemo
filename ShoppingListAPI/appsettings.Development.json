{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "System": "Warning",
      "ShoppingListAPI": "Debug",
      "Microsoft.AspNetCore.Watch.BrowserRefresh": "None",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "None"
    }
  },
  "AppSettings": {
    "ApiUrl": "http://localhost:5002",
    "DataDirectory": "Data/FileStore/shoppinglists",
    "WebSocket": {
      "KeepAliveInterval": "00:02:00",
      "Path": "/ws"
    },
    "Development": {
      "EnableSwagger": true,
      "EnableDetailedErrors": false,
      "EnableDebugLogging": true
    }
  },
  "Cors": {
    "AllowedOrigins": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "ExposedHeaders": ["Content-Disposition"]
  },
  "DetailedErrors": false,
  "BrowserLink": {
    "Enabled": false
  },
  "StaticFiles": {
    "BrowserLink": {
      "Enabled": false
    }
  },
  "Watch": {
    "BrowserRefresh": {
      "Enabled": false
    },
    "UsePollingFileWatcher": false
  }
}
