{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=backend_management;Username=postgres;Password=your_password",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "your_secure_secret_key_at_least_32_bytes_long",
    "Issuer": "BackendManagement",
    "Audience": "BackendManagement",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "DefaultIndex": "backendmanagement",
    "Username": "elastic",
    "Password": "your_elastic_password"
  },
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": "6831",
    "ServiceName": "backend-management"
  },
  "Security": {
    "CorsPolicy": {
      "AllowedOrigins": ["http://localhost:3000"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE"],
      "AllowedHeaders": ["Content-Type", "Authorization"]
    },
    "RateLimiting": {
      "EnableRateLimiting": true,
      "PermitLimit": 100,
      "Window": "00:01:00"
    }
  },
  "DatabaseSettings": {
    "DatabaseType": "PostgreSQL",
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "MaxBatchSize": 100,
    "EnableSecondLevelCache": true,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "CacheSettings": {
    "DefaultExpiration": "00:30:00",
    "SlidingExpiration": "00:05:00",
    "EnableCompression": true
  },
  "LogSettings": {
    "LogDirectory": "Logs",
    "RetentionDays": 30,
    "MinimumLevel": "Information",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableElasticsearchLogging": true
  },
  "BackupSettings": {
    "BackupPath": "D:\\Backups",
    "RetentionDays": 30,
    "EnableAutomaticBackup": true,
    "BackupSchedule": "0 0 * * *"
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "MetricsPort": 9100,
    "HealthCheckEndpoint": "/health"
  },
  "Tenancy": {
    "EnableMultiTenancy": true,
    "TenantIdentifierKey": "X-Tenant-Id",
    "DefaultTenantId": "00000000-0000-0000-0000-000000000000"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
