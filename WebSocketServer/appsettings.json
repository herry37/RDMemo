{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },
  "ApiSettings": {
    "BaseUrl": "/api",
    "TrucksEndpoint": "/trucks",
    "LocalBaseUrl": "https://api.kcg.gov.tw/api/service/Get/aaf4ce4b-4ca8-43de-bfaf-6dc97e89cac0",
    "ProductionBaseUrl": "http://king.somee.com/api",
    "RetryPolicy": {
      "MaxRetries": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 5000
    },
    "Cache": {
      "DefaultExpirationMinutes": 5,
      "MaxCacheItems": 1000
    }
  },
  "Performance": {
    "ResponseCompression": {
      "EnableForHttps": true,
      "MimeTypes": [
        "text/plain",
        "text/css",
        "application/javascript",
        "text/html",
        "application/xml",
        "text/xml",
        "application/json",
        "text/json"
      ]
    },
    "StaticFiles": {
      "CacheControl": {
        "MaxAge": 86400
      }
    },
    "HttpClient": {
      "HandlerLifetimeMinutes": 5,
      "MaxConnectionsPerServer": 20,
      "TimeoutSeconds": 60
    }
  },
  "Security": {
    "Cors": {
      "AllowedOrigins": ["*"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "PreflightMaxAge": 600
    }
  },
  "Monitoring": {
    "HealthChecks": {
      "MemoryThresholdMb": 1024,
      "EvaluationIntervalSeconds": 30
    }
  },
  "AllowedHosts": "*"
}
